#!/usr/bin/env python3.2

import sys

import matplotlib as mpl
mpl.use('pdf')

import matplotlib.pyplot as plt

from pydot import graph_from_dot_file

from countrymap import CountryMap, alphas, colors


def _name2iso(name):
    if name not in _namemap:
        return name
    return _namemap[name]


def main(argv=None):
    if argv is None:
        argv = sys.argv

    args = argv[1:]

    try:
        assert(len(args) >= 2)
        sampled = set()
        pdffile = args.pop(-1)
        dotfile = args.pop(-1)
        for i in range(len(args)-1, -1, -1):
            arg = args[i]
            if arg[0] == '-':
                if arg[1] == 'S':
                    sampled |= set(args.pop(i+1).split(','))
                    del args[i]
                else:
                    assert(0)
        assert(len(args) == 0)
    except:
        print('usage: plotgcnet [-S SAMPLEDCOUNTRIES] DOTFILE OUTPUTPDF')
        return -1

    cm = CountryMap(
        projection='merc',
        llcrnrlon=-180.,
        llcrnrlat= -56.,
        urcrnrlon= 180.,
        urcrnrlat=  71.5,
        resolution='i')

    lines = cm.drawcountries(
        color=colors['border_color'],
        linewidth=0.25,
        zorder=20
    )
    lines.set_alpha(alphas['border_alpha'])

    cm.drawmapboundary(fill_color=colors['lake_color'])
    cm.fillcontinents(
        color=colors['border_color'],
        lake_color=colors['lake_color']
    )

    country_kwargs = {
        'color': colors['land_color'],
        'linewidth': 0.
    }

    gc_kwargs = {
        'color': colors['edge_color'],
        'alpha': alphas['edge_alpha'],
        'linewidth': 0.5,
        'zorder': 25
    }

    for node_ in sampled:
        node = _name2iso(node_)
        try:
            cm.draw_country(node, **country_kwargs)
        except:
            print("country '%s' unrecognized, skipping" % node, file=sys.stderr)

    # ignore this node, it's spurious 
    sampled.add('node')

    graph = graph_from_dot_file(dotfile)

    for edge in graph.get_edges():
        src = _name2iso(edge.get_source().strip('"'))
        dst = _name2iso(edge.get_destination().strip('"'))

        try:
            cm.draw_gc(src, dst, **gc_kwargs)
        except:
            pass

        for node in (src, dst):
            if node not in sampled:
                sampled.add(node)
                try:
                    cm.draw_country(node, **country_kwargs)
                except:
                    print("country '%s' unrecognized, skipping" % node, file=sys.stderr)

    for node_ in graph.get_nodes():
        node = _name2iso(node_.get_name().strip('"'))
        if node not in sampled:
            sampled.add(node)
            try:
                cm.draw_country(node, **country_kwargs)
            except:
                print("country '%s' unrecognized, skipping" % node, file=sys.stderr)

    plt.savefig(pdffile, format='pdf', bbox_inches='tight', pad_inches=0.25)

    return 0


